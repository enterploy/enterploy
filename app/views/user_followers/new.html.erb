<% if @follower %>
	<h1><%= @follower.full_name%></h1>

	<p>By clicking follow you will be update with new job postings from <%= @follower.company_name %>. </p>
	
	<p>Do you want to follow <%= @follower.company_name %>?</p>

	<%= form_for @user_follower, method: :post do |form| %>
		<div class= "form form-actions">
			<%= form.hidden_field :follower_id, value: @follower.id %>
			<%= submit_tag "Yes, Follow", class: 'btn btn-primary' %>
			<%= link_to "Cancel", users_path, class: 'btn' %>

		</div>
	<% end %>

<% end %>