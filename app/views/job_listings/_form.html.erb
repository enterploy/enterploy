<%= simple_form_for(@job_listing, html: {class: "well"}) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
   
  	
    <%= f.input :company_name, collection: [@current_user.company_name], prompt: "Plese Select" %>

    <%= f.input :notification_email, collection: [@current_user.email],hint: "this email will be used to send notifications about application requests." %>

  	<%= f.input :job_type, collection: ['Full Time', 'Part Time', 'Seasonal', 'Internship', 'Volunteer'], prompt: "Select one" %>
  	<%= f.input :job_title %>
  	<%= f.input :job_description %>
  	<%= f.input :job_responsibilities %>
  	<%= f.input :job_benefits %>
  	<%= f.input :pay_range %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

