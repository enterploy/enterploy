<h1>Viewing Applied Job</h1>
	

<% if @user_app.requested? %>
	<h3>Do you want to accept the application for <%= @app.first_name %></h3>
<% end %>


<div>
	<% if @user_app.requested? %>
	<%= form_for @user_app, url: accept_user_app_path(@user_app), method: :put do |form| %>
	<%= submit_tag "Accept Application", class: 'btn btn-primary' %>
	<% end %>
<% end %>
</div>
